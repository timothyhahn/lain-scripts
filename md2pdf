#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: md2pdf INPUT [OUTPUT]"
    exit 1
fi


INPUT="$1"
if [ "$2" ]; then
    OUTPUT="$2"
else
    OUTPUT="${1%.*}.pdf" 
fi



markdown "$INPUT" > /tmp/temp.html
pandoc -H ~/scripts/deps/margins.sty /tmp/temp.html -o "$OUTPUT"
evince "$OUTPUT" &
rm /tmp/temp.html

